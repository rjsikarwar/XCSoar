<?xml version="1.0"?>

<Form Caption="Waypoint Info">
  <Button Name="cmdGoto" Caption="GoTo" X="2" Y="2" Width="75" Height="35" OnClick="OnGotoClicked" />

  <SymbolButton Name="cmdMagnify" Caption="+" X="23" Y="60" Width="35" Height="35" OnClick="OnMagnifyClicked" />
  <SymbolButton Name="cmdShrink" Caption="-" X="23" Y="97" Width="35" Height="35" OnClick="OnShrinkClicked" />

  <SymbolButton Name="cmdPrev" Caption="&lt;" X="2" Y="-74" Width="37" Height="35" OnClick="OnPrevClicked" />
  <SymbolButton Name="cmdNext" Caption="&gt;" X="41" Y="-74" Width="36" Height="35" OnClick="OnNextClicked" />

  <Button Name="cmdClose" Caption="Close" X="2" Y="-37" Width="75" Height="35" OnClick="OnCloseClicked" />

  <Panel Name="frmInfos" X="76" Y="0">
    <Edit Name="prpWpComment" Caption="Comment" X="2" Y="2" Height="40" CaptionWidth="88" ReadOnly="1" MultiLine="1" />
    <Edit Name="Radio" Caption="Radio frequency" X="2" Height="20" CaptionWidth="88" ReadOnly="1" />
    <Edit Name="Runway" Caption="Runway" X="2" Height="20" CaptionWidth="88" ReadOnly="1" />
    <Edit Name="Location" Caption="Location" X="2" Height="20" CaptionWidth="88" ReadOnly="1" />
    <Edit Name="prpAltitude" Caption="Elevation" X="2" Height="20" CaptionWidth="138" ReadOnly="1" />
    <Edit Name="prpSunset" Caption="Sunset" X="2" Height="20" CaptionWidth="138" ReadOnly="1" />
    <Edit Name="BearingDistance" Caption="Bearing and Distance" X="2" Height="20" CaptionWidth="138" ReadOnly="1" />
    <Edit Name="prpMc0" Caption="Alt. diff. MC 0" X="2" Height="20" CaptionWidth="138" ReadOnly="1" />
    <Edit Name="prpMc1" Caption="Alt. diff. MC safety" X="2" Height="20" CaptionWidth="138" ReadOnly="1" />
    <Edit Name="prpMc2" Caption="Alt. diff. MC current" X="2" Height="20" CaptionWidth="138" ReadOnly="1" />
  </Panel>

  <Panel Name="frmDetails" X="76" Y="0">
    <List Name="Files" X="2" Y="2" ItemHeight="18" />
    <Edit Name="Details" X="2" Y="2" ItemHeight="18" CaptionWidth="0" ReadOnly="1" MultiLine="1" />
  </Panel>

  <Panel Name="frmCommands" X="76" Y="0" Visible="0">
    <Button Name="cmdReplace" Caption="Replace In Task" X="40" Y="10" Width="-50" Height="30" OnClick="OnReplaceClicked" />
    <Button Name="cmdInserInTask" Caption="Insert In Task" X="40" Width="-50" Height="30" OnClick="OnInsertInTaskClicked" />
    <Button Name="cmdAppendInTask" Caption="Append To Task" X="40" Width="-50" Height="30" OnClick="OnAppendInTaskClicked" />
    <Button Name="cmdRemoveFromTask" Caption="Remove From Task" X="40" Width="-50" Height="30" OnClick="OnRemoveFromTaskClicked" />
    <Button Name="cmdNewHome" Caption="Set As New Home" X="40" Width="-50" Height="30" OnClick="OnNewHomeClicked" />
    <Button Name="cmdActivatePan" Caption="Pan To Waypoint" X="40" Width="-50" Height="30" OnClick="OnActivatePanClicked" />
  </Panel>

  <Canvas Name="frmImage" X="76" Y="0" Visible="0" Border="1" OnPaint="OnImagePaint"/>
</Form>
